<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundScreens"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/include"
        layout="@layout/green_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_marginBottom="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:text="@string/order_items"
                android:textColor="@color/textprimaryColor"
                android:textSize="13sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/order_details_order_items_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/order_status"
                android:textColor="@color/textprimaryColor"
                android:textSize="13dp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/order_date"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_order_date"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="2019 / 03/ 31 "
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/order_number"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_order_number"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="#201894332"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/order_status"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="Succeeded"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/order_price"
                android:textColor="@color/textprimaryColor"
                android:textSize="13dp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/prices"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_order_prices"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="250 A.E.D"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/shipping_charges"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_shipping_charges"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="250 A.E.D"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/cash_on_delivery"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_cash_on_delivery"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="250 A.E.D"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/total"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_total"
                            fontPath="fonts/BCN_Medium.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:text="250 A.E.D"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/delivery_address"
                android:textColor="@color/textprimaryColor"
                android:textSize="13sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="100dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_name"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_phone"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_country"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_city"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_region"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="@string/address_notes"
                            android:textColor="@color/textBlackColor"
                            android:textSize="9sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/order_details_address_notes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:padding="10dp"
                            android:textColor="@color/textBlackColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/viewBackground" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>